<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".AnalyticsFragment">

    <TextView
        android:id="@+id/tv_weekly"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Weekly Attendance"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_weekly_absent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Absents: 0%"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/tv_weekly_present"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Presents: 0%"
        android:layout_marginTop="4dp" />

    <TextView
        android:id="@+id/tv_monthly"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Monthly Attendance"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/tv_monthly_absent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Absents: 0%"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/tv_monthly_present"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Presents: 0%"
        android:layout_marginTop="4dp" />

    <TextView
        android:id="@+id/tv_yearly"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Yearly Attendance"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/tv_yearly_absent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Absents: 0%"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/tv_yearly_present"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Presents: 0%"
        android:layout_marginTop="4dp" />

</LinearLayout>
