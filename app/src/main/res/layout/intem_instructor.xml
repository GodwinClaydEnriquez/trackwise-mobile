<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:stretchColumns="1"
    android:background="@android:color/white"
    android:layout_marginTop="2dp"
    android:layout_marginBottom="2dp"
    android:elevation="4dp"
    android:showDividers="middle"
    android:divider="?android:attr/listDivider">

    <TableRow>
        <TextView
            android:id="@+id/attendanceId"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="4dp"
            android:text="ID"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/attendanceName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:padding="4dp"
            android:text="Name"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/attendanceEdpCode"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="4dp"
            android:text="EDP Code"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/attendanceSubject"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:padding="4dp"
            android:text="Subject"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/attendanceDepartment"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="4dp"
            android:text="Department"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/attendanceTeaching"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="4dp"
            android:text="Teaching"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/attendanceRemarks"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="4dp"
            android:text="Remarks"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/attendanceTimeIn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="4dp"
            android:text="Time In"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/attendanceTimeOut"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="4dp"
            android:text="Time Out"
            android:textStyle="bold"/>
    </TableRow>
</TableLayout>
